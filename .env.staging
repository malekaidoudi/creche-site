# Configuration de staging pour Mac + MAMP
DB_HOST=127.0.0.1
DB_PORT=8889
DB_USER=root
DB_PASS=root
DB_NAME=creche_app_staging

# JWT Configuration
JWT_SECRET=staging-jwt-secret-key-for-testing
JWT_EXPIRES_IN=7d

# Upload Configuration
UPLOADS_DIR=uploads
MAX_FILE_SIZE=5242880

# Server Configuration
PORT=3004
NODE_ENV=staging

# Frontend URL (pour CORS)
FRONTEND_URL=http://localhost:5174

# Email Configuration (utiliser des services de test)
EMAIL_HOST=smtp.mailtrap.io
EMAIL_PORT=2525
EMAIL_USER=your-mailtrap-user
EMAIL_PASS=your-mailtrap-password

# Logs
LOG_LEVEL=debug
LOG_FILE=./logs/staging.log
